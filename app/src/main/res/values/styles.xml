<resources>
    <!--    AppTheme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--    Text Styles-->
    <style name="TextAppearance" />

    <style name="TextAppearance.Toolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/toolbar_black</item>
    </style>

    <!--    Text Primary-->
    <style name="TextAppearance.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Primary.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Primary.20">
        <item name="android:textSize">20sp</item>
    </style>

    <!--    Text Secondary-->
    <style name="TextAppearance.Secondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Secondary.14">
        <item name="android:textSize">14sp</item>
    </style>

</resources>