<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--    Text Styles-->
    <style name="TextAppearance" />

    <!--    Text Primary-->
    <style name="TextAppearance.Primary">
        <item name="color">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Primary.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Primary.20">
        <item name="android:textSize">20sp</item>
    </style>

    <!--    Text secondary-->
    <style name="TextAppearance.Secondary">
        <item name="color">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Secondary.14">
        <item name="android:textSize">14sp</item>
    </style>

</resources>